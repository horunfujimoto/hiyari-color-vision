<div class="container py-5">
  <div class="row">
    <div class="col-11 mx-auto">
      <h3>管理者ログイン</h3>

      <div class="py-3">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "個人パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="field">
          <%= f.label :company_password, "社内パスワード" %><br />
          <%= f.password_field :company_password, autocomplete: "new-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions m-2">
          <%= f.submit "ログイン", class: "btn btn-dark" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>

      </div>
    </div>
  </div>
</div>