<%= javascript_pack_tag 'tab' %>

<div class="container">
  <div class="row">
    <div class="col-10 text-center">
    <h1 class="my-5"><%= "#{@member.name}さんのマイページ" %></h1>

    <!--ログインユーザー自身の場合-->
    <% if @member == current_member %>
      <div class = "mx-3">
        <%= link_to "編集", edit_member_path(current_member), class: "btn btn-dark" %>
      </div>
      <div class = "mx-3">
        <%= link_to "退会", confirm_members_path(current_member), class: "btn btn-dark" %>
      </div>
    <% end %>

    </div>

    <div class="col-10 mt-5">

      <ul class="list-group list-group-horizontal">
        <li class="list-group-item col-4 tab tab-active">
          <i class="fa-solid fa-bookmark">既読済み一覧</i>
        </li>
        <li class="list-group-item col-4 tab">
          <i class="fa-solid fa-rectangle-list">投稿一覧</i>
        </li>
        <li class="list-group-item col-4 tab">
          <i class="fa-solid fa-pen-to-square">非公開一覧</i>
        </li>
      </ul>

      <!--タブ：既読-->
      <!--<div class="tabbox-contents">-->
