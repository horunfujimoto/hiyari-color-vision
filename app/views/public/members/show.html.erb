      <!--      </div>-->
      <!--    % end %>-->
      <!--  </div>-->
      <!--  <div class="d-flex justify-content-center">%= paginate @favorite_posts %></div>-->
      <!--</div>-->

      <!--タブ：投稿-->
      <div class="tabbox">
        <% if @member_posts.empty? %>
          <h6 class='mt-4'>投稿はまだありません。</h6>
        <% else %>
          <div class="d-flex flex-wrap">
            <%= render "public/posts/list", posts: @member_posts %>
          </div>
        <% end %>
        <div class="d-flex justify-content-center"><%= paginate @member_posts %></div>
      </div>

      <!--タブ：非公開-->
      <div class="tabbox">
        <% if @unopened_posts.empty? %>
          <h6 class='mt-4'>非公開の投稿はありません。</h6>
        <% else %>
          <div class="d-flex flex-wrap">
            <%= render "public/posts/list", posts: @unopened_posts %>
          </div>
        <% end %>
        <div class="d-flex justify-content-center"><%= paginate @unopened_posts %></div>
      </div>

    </div>

  </div>
</div>
