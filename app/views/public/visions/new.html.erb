<div class="mx-auto">
  <h2 class="title">改善案作成</h2>
  <!--バリデーション部分-->
  <%= render 'layouts/error', obj: @vision %>
  <!--投稿フォーム-->
  <div class="row mt-4 justify-content-center">
  <%= form_with model: @vision, url: post_visions_path, local: true do |f| %>
    <div class="py-3">
      <div class="text-break mt-3">
        <%= "タイトル : #{@post.title}" %>
      </div>
      <div class="text-break mt-3">
        <%= "詳細説明 : " %><br>
        <%= @post.body %>
      </div>
      <div class="text-break mt-3">
        <%= f.label :improvement, "改善案" %>
        <%= f.text_area :improvement, class: "form-control", size: "50x10" %>
      </div>
      <div class="text-break mt-3">
        <%= f.label :closing_day, "改善締切日" %>
        <%= f.datetime_local_field :closing_day, class: "form-control" %>
      </div>
      <div class="text-break mt-3">
        <%= f.label :double_check, "確認者" %>
        <%= f.text_field :double_check, class: "form-control" %>
      </div>
    </div>
    <%= f.submit '作成', class: "btn btn-dark px-4" %>
  <% end %>
  </div>
</div>