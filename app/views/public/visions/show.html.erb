<div class="container py-5">
  <div class="row">
    <div class="col-11 mx-auto">
      <h3>改善案詳細</h3>

      <div class="row justify-content-center">
        <table class="table table-borderless">
          <div class="py-2">
            <tr>
              <td>タイトル</td>
              <td><%= @post.title %></td>
            </tr>
            <tr>
              <td>ヒヤリハット詳細</td>
              <td><%= @post.body %></td>
            </tr>
            <tr>
              <td>改善案</td>
              <td><%= @vision.improvement %></td>
            </tr>
            <tr>
              <td>改善締切日</td>
              <td><%= @vision.closing_day.strftime("%Y年%m月%d日") %></td>
            </tr>
            <tr>
              <td>確認者</td>
              <td><%= @vision.double_check %></td>
            </tr>
          </div>
        </table>

        <% if @post.member == current_member %>
          <div class = "mx-3">
            <%= link_to "PDFを表示", post_vision_show_pdf_index_path(@post, @vision, format: "pdf"), class: "btn btn-dark" %>
          </div>
          <div class = "mx-3">
            <%= link_to "編集", edit_post_vision_path(@post, @vision), class: "btn btn-dark" %>
          </div>
          <div class = "mx-3">
            <%= link_to "削除", post_vision_path(@post, @vision), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-dark" %>
          </div>
        <% end %>

        <!--いいね機能-->
        <div id = "favorite_buttons_<%= @vision.id %>" >
          <%= render "public/favorites/favorite", vision: @vision, post: @post %>
        </div>

      </div>
    </div>
  </div>
</div>