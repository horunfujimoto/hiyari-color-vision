<div class="mx-auto">
  <h2 class="title">社内ヒヤリハット一覧</h2>
  <!--並び替え・フィルターのリンク-->
  <div class = "row m-4" >
    <i class="fa-solid fa-filter">
      <%= link_to '新しい順', posts_path(sort_by: "latest"), class: "link-color" %>
      <%= link_to '古い順', posts_path(sort_by: "old"), class: "link-color mx-2" %>
      <%= link_to '軽度', posts_path(sort_by: "level_low"), class: "link-color" %>
      <%= link_to '中等度', posts_path(sort_by: "level_middle"), class: "link-color mx-2" %>
      <%= link_to '重度', posts_path(sort_by: "level_high"), class: "link-color" %>
      <%= link_to '改善案あり', posts_path(sort_by: "vision_presence"), class: "link-color mx-2" %>
      <%= link_to '改善案なし', posts_path(sort_by: "vision_absence"), class: "link-color" %>
    </i>
  </div>
  <!--一覧-->
  <%= render "public/posts/list", posts: @open_posts %>
  <%= paginate @open_posts %>
</div>
